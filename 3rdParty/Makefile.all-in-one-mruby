# -*- mode: Makefile; -*-

## -----------------------------------------------------------------------------
## --SECTION--                                                           LIBRARY
## -----------------------------------------------------------------------------

################################################################################
### @brief mruby
################################################################################

BUILT_SOURCES += @MRUBY_LIBS@

@MRUBY_LIBS@: @srcdir@/.mruby-build-@TRI_BITS@

@srcdir@/.mruby-build-@TRI_BITS@:
	@echo
	@echo "--------------------------------------------------------------------------------"
	@echo "BUILDING mruby"
	@echo "--------------------------------------------------------------------------------"
	@echo

	cd @top_srcdir@/3rdParty/mruby && $(MAKE) -j1

	touch @srcdir@/.mruby-build-@TRI_BITS@

	@echo
	@echo "--------------------------------------------------------------------------------"
	@echo "BUILD mruby FINISHED"
	@echo "--------------------------------------------------------------------------------"
	@echo

################################################################################
### @brief additional files to remove
###
### "clean" in mruby is broken
################################################################################

CLEANUP_3RD += clean-mruby

clean-mruby:
	rm -f @srcdir@/.mruby-build-@TRI_BITS@
	cd @top_srcdir@/3rdParty/MRUBY && ( $(MAKE) -k clean || true )

## -----------------------------------------------------------------------------
## --SECTION--                                                       END-OF-FILE
## -----------------------------------------------------------------------------

